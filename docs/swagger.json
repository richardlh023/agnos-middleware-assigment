{
    "swagger": "2.0",
    "info": {
        "description": "Hospital Middleware System API for staff authentication and patient search",
        "title": "Agnos Middleware API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/patient/search": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Search for patients by optional criteria. Requires JWT authentication. Staff can only access patients from their own hospital.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Patient"
                ],
                "summary": "Search for patients",
                "parameters": [
                    {
                        "type": "string",
                        "default": "1234567890123",
                        "description": "Patient ID (must be national_id or passport_id). Examples: Hospital A - 1234567890123, 9876543210987, AB1234567; Hospital B - 1111222233334, 4455667788990",
                        "name": "id",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Hospital Number",
                        "name": "patient_hn",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "National ID",
                        "name": "national_id",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Passport ID",
                        "name": "passport_id",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "First name (partial match)",
                        "name": "first_name",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Middle name (partial match)",
                        "name": "middle_name",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Last name (partial match)",
                        "name": "last_name",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Date of birth (YYYY-MM-DD)",
                        "name": "date_of_birth",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Phone number",
                        "name": "phone_number",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Email",
                        "name": "email",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Gender (M/F)",
                        "name": "gender",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Patients found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request - at least one search criteria must be provided",
                        "schema": {
                            "$ref": "#/definitions/utils.PatientSearchErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - authorization header required or invalid token",
                        "schema": {
                            "$ref": "#/definitions/utils.AuthErrorResponse"
                        }
                    },
                    "403": {
                        "description": "Access denied - patient does not belong to your hospital",
                        "schema": {
                            "$ref": "#/definitions/utils.AccessDeniedErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Patient not found",
                        "schema": {
                            "$ref": "#/definitions/utils.NotFoundErrorResponse"
                        }
                    }
                }
            }
        },
        "/staff/create": {
            "post": {
                "description": "Create a new hospital staff account with employee details. All fields will be pre-filled with example values in Swagger UI.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Staff"
                ],
                "summary": "Create a new staff member",
                "parameters": [
                    {
                        "description": "Staff creation request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.CreateStaffRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Staff created successfully",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad request - validation error",
                        "schema": {
                            "$ref": "#/definitions/utils.CreateStaffErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Conflict - username/email/employee_id already exists",
                        "schema": {
                            "$ref": "#/definitions/utils.CreateStaffErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/utils.CreateStaffErrorResponse"
                        }
                    }
                }
            }
        },
        "/staff/login": {
            "post": {
                "description": "Authenticate staff member and receive JWT token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Staff"
                ],
                "summary": "Staff login",
                "parameters": [
                    {
                        "description": "Login credentials",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "schema": {
                            "$ref": "#/definitions/models.LoginResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request - validation error",
                        "schema": {
                            "$ref": "#/definitions/utils.LoginErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - invalid credentials",
                        "schema": {
                            "$ref": "#/definitions/utils.LoginErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.CreateStaffRequest": {
            "type": "object",
            "required": [
                "email",
                "employee_id",
                "first_name",
                "hospital",
                "last_name",
                "password",
                "role",
                "username"
            ],
            "properties": {
                "department": {
                    "type": "string",
                    "example": "Cardiology"
                },
                "email": {
                    "type": "string",
                    "example": "john.doe@hospital.com"
                },
                "employee_id": {
                    "type": "string",
                    "example": "EMP001"
                },
                "first_name": {
                    "type": "string",
                    "example": "John"
                },
                "hospital": {
                    "type": "string",
                    "example": "Hospital A"
                },
                "last_name": {
                    "type": "string",
                    "example": "Doe"
                },
                "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                },
                "phone_number": {
                    "type": "string",
                    "example": "0891234567"
                },
                "role": {
                    "type": "string",
                    "example": "Doctor"
                },
                "username": {
                    "type": "string",
                    "example": "doctor1"
                }
            }
        },
        "models.LoginRequest": {
            "type": "object",
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "password": {
                    "type": "string",
                    "example": "password123"
                },
                "username": {
                    "type": "string",
                    "example": "doctor1"
                }
            }
        },
        "models.LoginResponse": {
            "type": "object",
            "properties": {
                "department": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "employee_id": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "hospital": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "utils.AccessDeniedErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "access denied: patient does not belong to your hospital"
                }
            }
        },
        "utils.AuthErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "authorization header required"
                }
            }
        },
        "utils.CreateStaffErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "username already exists"
                }
            }
        },
        "utils.LoginErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "invalid credentials"
                }
            }
        },
        "utils.NotFoundErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "patient not found"
                }
            }
        },
        "utils.PatientSearchErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "at least one search criteria must be provided"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token. Example: \"Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\"",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}